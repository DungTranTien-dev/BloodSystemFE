# Backend Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================
# SERVER CONFIGURATION
# ===========================
PORT=5100
NODE_ENV=development

# ===========================
# SQL SERVER CONFIGURATION
# ===========================
# Update these values to match your SQL Server setup
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=BloodSupportDb
DB_USER=sa
DB_PASSWORD=your_sql_server_password_here

# For SQL Server Authentication:
# - Windows Authentication: leave DB_USER and DB_PASSWORD empty
# - SQL Server Authentication: provide DB_USER and DB_PASSWORD

# ===========================
# AUTHENTICATION CONFIGURATION
# ===========================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# ===========================
# CORS CONFIGURATION
# ===========================
FRONTEND_URL=http://localhost:5179

# ===========================
# OPTIONAL CONFIGURATIONS
# ===========================
# Enable/disable features
ENABLE_LOGGING=true
ENABLE_RATE_LIMITING=false

# File upload limits
MAX_FILE_SIZE=10mb

# Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS configuration (for notifications)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890
